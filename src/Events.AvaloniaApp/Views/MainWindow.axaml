<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Events.AvaloniaApp.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Events.AvaloniaApp.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Events.AvaloniaApp">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <DockPanel>
        <TabControl Margin="5">
            <TabItem Header="Events">
                <DataGrid ItemsSource="{Binding Events}" 
                          SelectedItem="{Binding SelectedEvent}"
                          AutoGenerateColumns="False"
                          IsReadOnly="False"
                          Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" IsReadOnly="False"/>
                        <DataGridTextColumn Header="Date and Time" Binding="{Binding DateTime}" IsReadOnly="False"/>
                        <DataGridTextColumn Header="Duration" Binding="{Binding Duration}" IsReadOnly="False"/>
                        <DataGridTextColumn Header="Location" Binding="{Binding Location}" IsReadOnly="False"/>
                        <DataGridTextColumn Header="Category" Binding="{Binding Category}" IsReadOnly="False"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" IsReadOnly="False"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Stats">
                <TextBlock Margin="5">This is tab 2 content</TextBlock>
            </TabItem>
            <TabItem Header="Upcoming events">
                <TextBlock Margin="5">This is tab 3 content</TextBlock>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
